@page
@model IndexModel
@{
    var i = 1;
    var EsAdmin = User.IsInRole("Admin");
}
<h2>Luchadores</h2>
<div class="row">
    <a asp-page="./Crear" role="button" class="btn btn-success">Crear</a>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Marca</th>
      <th scope="col">Edad</th>
      <th scope="col">Genero</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var luchador in Model.Luchadores)
    {
      
    <tr>
    
      <td>@luchador.Nombre</td>
      <td>@luchador.Marca</td>
      <td>@luchador.Edad</td>
      <td>@luchador.Genero</td>

      <td><a asp-page="./Detalles" asp-route-id="@luchador.Id" class="btn btn-info">Detalles </a>
      <a asp-page="./Editar" asp-route-id="@luchador.Id" class="btn btn-info">Editar </a>
      @if(EsAdmin){
      <a asp-page="./Borrar" asp-route-id="@luchador.Id" class="btn btn-warning">Borrar </a>
      }
      </td>
    </tr>
        i++;
    }
   
  </tbody>
</table>